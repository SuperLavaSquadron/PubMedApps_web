= javascript_include_tag "flower.js"
= javascript_include_tag "d3.v3.min.js"

- provide :title, "Flower"

.row
  h1 PubMed Flower

.row
  = form_tag controller: "flowers", action: "flower"
    = label_tag :pmid, "Enter PMID:"
    = text_field_tag :pmid
    = submit_tag "Blossom", class: "button radius tiny info"
    = link_to "Demo", flower_path(:pmid => "25313075"), :method => :post, class: "button radius tiny info"

- if @arg_error
  .row
    p = @arg_error
- elsif @citation && @related_json
  .row
    .small-7.large-7.columns#flowersvg
    .small-5.large-5.columns#flowertext
      h4#h4pmid
      p#pmid

      h4#h4title
      p#title

      h4#h4pubmedlink
      a#pubmedlink
    
      h4#h4abstract
      p#abstract
  javascript:
    jsondata = jQuery.parseJSON("#{j @related_json.html_safe}");
      rendering()




